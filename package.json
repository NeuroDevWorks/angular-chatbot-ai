{
  "name": "angular-chatbot-ai",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "tsx server/index.ts",
    "build": "vite build && esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "NODE_ENV=production node dist/index.js",
    "check": "tsc",
    "db:push": "drizzle-kit push --force --config=./drizzle.config.ts",
    "db:seed": "tsx db/seed.ts",
    "build:packages": "npm run build --workspaces",
    "build:core": "npm run build --workspace @neurodevworks/chatbot-core",
    "build:chatbot": "npm run build --workspace @neurodevworks/angular-chatbot",
    "clean": "npm run clean --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "publish:packages": "npm run build:packages && npm publish --access public --workspace @neurodevworks/chatbot-core && npm publish --access public --workspace @neurodevworks/angular-chatbot",
    "publish:github": "npm run build:packages && npm publish --registry=https://npm.pkg.github.com/ --workspace @neurodevworks/chatbot-core && npm publish --registry=https://npm.pkg.github.com/ --workspace @neurodevworks/angular-chatbot",
    "deploy:netlify": "./scripts/deploy-netlify.sh",
    "deploy:demo": "cd demo && npm install && npm run build && npx netlify-cli deploy --prod --dir=dist --site=angularai-demo",
    "deploy:manual": "cd demo && npm run build && cd dist && zip -r ../angularai-demo-deploy.zip .",
    "publish:all": "./publish-all.sh",
    "demo": "cd demo && npm install && npm start",
    "demo:build": "cd demo && npm install && npm run build"
  },
  "dependencies": {
    "@angular/animations": "^18.0.0",
    "@angular/common": "^18.0.0",
    "@angular/compiler": "^18.0.0",
    "@angular/core": "^18.0.0",
    "@angular/forms": "^18.0.0",
    "@angular/platform-browser": "^18.0.0",
    "@angular/platform-browser-dynamic": "^18.0.0",
    "@angular/router": "^18.0.0",
    "@angular/cdk": "^18.0.0",
    "@angular/material": "^18.0.0",
    "@anthropic-ai/sdk": "^0.37.0",
    "@hookform/resolvers": "^3.9.1",
    "@jridgewell/trace-mapping": "^0.3.25",
    "@neondatabase/serverless": "^0.10.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "connect-pg-simple": "^10.0.0",
    "date-fns": "^3.6.0",
    "drizzle-orm": "^0.38.4",
    "drizzle-seed": "^0.3.1",
    "drizzle-zod": "^0.6.0",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "openai": "^4.97.0",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "rxjs": "^7.8.1",
    "tailwind-merge": "^2.5.4",
    "tslib": "^2.6.0",
    "ws": "^8.18.0",
    "zod": "^3.23.8",
    "zod-validation-error": "^3.4.0",
    "zone.js": "^0.14.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.0",
    "@angular/cli": "^18.0.0",
    "@angular/compiler-cli": "^18.0.0",
    "@tailwindcss/typography": "^0.5.15",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/express": "4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/node": "20.16.11",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/ws": "^8.5.13",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.27.1",
    "esbuild": "^0.24.0",
    "eslint": "^8.56.0",
    "ng-packagr": "^18.0.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "tsup": "^8.0.0",
    "tsx": "^4.19.1",
    "typescript": "~5.5.4",
    "vite": "^5.4.9"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  }
}
